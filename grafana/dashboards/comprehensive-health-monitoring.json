{
  "dashboard": {
    "id": null,
    "title": "VATSIM Comprehensive Health Monitoring",
    "tags": ["vatsim", "health", "monitoring"],
    "style": "dark",
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "Overall System Health",
        "type": "stat",
        "targets": [
          {
            "target": "overall_health",
            "refId": "A",
            "datasource": {
              "type": "grafana-simple-json-datasource",
              "uid": "vatsim_health_api"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "orange", "value": 80},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
